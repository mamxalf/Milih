<div id="<%= dom_id polling %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= polling.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= polling.duration %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this polling", polling, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this polling', edit_polling_path(polling), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
